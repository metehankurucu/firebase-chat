{
  "name": "@metehankurucu/firebase-chat",
  "version": "0.3.1",
  "description": "A small library for one-to-one messaging with Firebase.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run build",
    "test": "jest --detectOpenHandles",
    "pretest:dev": "npm run build",
    "test:dev": "jest --detectOpenHandles --watch",
    "build": "tsc",
    "dev": "nodemon",
    "start": "node dist/index",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prepublish": "npm run build",
    "prettier": "prettier --check 'src/**/*.ts'"
  },
  "keywords": [
    "chat",
    "firebase",
    "messaging",
    "firebase-chat"
  ],
  "author": "Metehan Kurucu <metehankurucu@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "firebase": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metehankurucu/firebase-chat.git"
  },
  "bugs": {
    "url": "https://github.com/metehankurucu/firebase-chat/issues"
  },
  "homepage": "https://github.com/metehankurucu/firebase-chat#readme"
}
